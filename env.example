# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-render-app.onrender.com,localhost

# Database (Render will provide this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# Celery Configuration
CELERY_BROKER_URL=redis://django-cv-redis:6379/0
CELERY_RESULT_BACKEND=redis://django-cv-redis:6379/0

# Slide Processing Directories (optional - defaults will be used if not set)
SLIDES_WATCH_DIR=/app/incoming_slides
SLIDES_CONTENT_DIR=/app/content

# Security (for production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
